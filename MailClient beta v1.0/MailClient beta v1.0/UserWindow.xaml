            </TabItem>
            <TabItem Header="已发送" Margin="-2,0">
                <Grid Margin="0,-2,0,0"/>
            </TabItem>
            <TabItem Header="收件箱" Margin="2.333,0,-2,0">
                <Grid Margin="0,-2,0,0"/>
            </TabItem>
            <TabItem Header="草稿箱" Margin="1,0,-5,0.187">
                <Grid Margin="0,-2,0,0"/>
            </TabItem>
            <TabItem Header="垃圾箱" Margin="-1,0,-3,0">
                <Grid Margin="0,-2,0,0"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
